<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_activity_background_color">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@id/edit_text"
        android:layout_alignTop="@id/edit_text"
        android:layout_marginStart="95dp"
        android:layout_marginTop="-62dp"
        android:text="@string/text_view"
        android:textColor="@color/black"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/edit_text"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@color/edit_text_background_color"
        android:hint="@string/edit_text_hint"
        android:inputType="text"
        android:padding="10dip"
        android:textColor="@color/black"
        android:textColorHint="@color/hint_color"
        android:importantForAutofill="no" />

    <Button
        android:id="@+id/accept_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@id/edit_text"
        android:layout_alignBottom="@id/edit_text"
        android:layout_marginStart="106dp"
        android:layout_marginBottom="-81dp"
        android:background="@color/button_background_color"
        android:text="@string/button_text"
        android:textColor="@color/black" />

</RelativeLayout>